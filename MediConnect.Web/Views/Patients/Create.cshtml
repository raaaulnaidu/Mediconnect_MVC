@model MediConnect.Web.Models.Patient
@{ ViewData["Title"] = "New Patient"; }

<div class="card" style="max-width:980px;margin:auto">
  <div class="section-head">
    <div class="section-title">New Patient</div>
  </div>

  <form asp-action="Create" method="post" class="grid grid-2">
    <label>Full Name
      <input class="input" asp-for="FullName" placeholder="Casey Lee" />
    </label>
    <label>Date of Birth
      <input class="input" asp-for="DateOfBirth" type="date" />
    </label>
    <label>Gender
      <select class="input" asp-for="Gender">
        <option value="">Selectâ€¦</option>
        <option>F</option><option>M</option><option>Other</option>
      </select>
    </label>
    <label>Email
      <input class="input" asp-for="Email" type="email" placeholder="casey@example.com" />
    </label>
    <label>Phone
      <input class="input" asp-for="Phone" placeholder="(555) 123-4567" />
    </label>

    <div class="mt-2">
      <button class="btn btn-success" type="submit">Save Patient</button>
      <a class="btn" asp-action="Index">Cancel</a>
    </div>
  </form>
</div>
