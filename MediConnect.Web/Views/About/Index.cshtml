@{
    ViewData["Title"] = "About MediConnect";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

<div class="container my-5">
    <div class="card shadow-lg border-0" style="max-width:980px;margin:auto;">
        <div class="card-body">
            <!-- Header Section -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold text-primary mb-1">About MediConnect</h2>
                    <p class="text-muted mb-0">
                        Lightweight healthcare MVC application integrating CRUD operations, NPI Registry lookup, and Botpress chatbot summaries.
                    </p>
                </div>
                <a class="btn btn-outline-dark" href="https://github.com/yourusername/mediconnect" target="_blank">
                    <i class="bi bi-github"></i> GitHub
                </a>
            </div>

            <!-- Mission and Features -->
            <div class="row g-4">
                <div class="col-md-6">
                    <h4 class="fw-semibold mb-2">Mission</h4>
                    <p class="text-muted">
                        Our mission is to deliver a classroom-friendly, healthcare web application
                        that demonstrates core concepts of ASP.NET MVC, CRUD functionality,
                        and API integrationâ€”all deployable on Azure Cloud.
                    </p>

                    <h4 class="fw-semibold mt-4 mb-2">Features</h4>
                    <ul class="text-muted ps-3" style="line-height:1.8">
                        <li>Patients / Providers / Appointments with full CRUD</li>
                        <li>NPI Registry search + interactive visualizations (Chart.js)</li>
                        <li>Botpress chatbot with summarized metrics</li>
                        <li>Singleton JSON persistence using <code>AppData.json</code></li>
                    </ul>
                </div>

                <!-- Team Section -->
                <div class="col-md-6">
                    <h4 class="fw-semibold mb-3">Our Team</h4>
                    <div class="row row-cols-1 row-cols-md-2 g-3">
                        <div class="col">
                            <div class="card border-0 text-center shadow-sm">
                                <img src="~/images/team/rahul.jpg" class="card-img-top rounded-circle mx-auto mt-3" style="width:90px;height:90px;object-fit:cover;" alt="Rahul Naidu">
                                <div class="card-body p-2">
                                    <strong>Rahul Naidu Maliga</strong>
                                    <div class="text-muted small">Backend & Azure</div>
                                </div>
                            </div>
                        </div>

                        <div class="col">
                            <div class="card border-0 text-center shadow-sm">
                                <img src="~/images/team/vrushabh.jpeg" class="card-img-top rounded-circle mx-auto mt-3" style="width:90px;height:90px;object-fit:cover;" alt="Vrushabh Mudda">
                                <div class="card-body p-2">
                                    <strong>Vrushabh Mudda</strong>
                                    <div class="text-muted small">Frontend & UX</div>
                                </div>
                            </div>
                        </div>

                        <div class="col">
                            <div class="card border-0 text-center shadow-sm">
                                <img src="~/images/team/sherman.jpeg" class="card-img-top rounded-circle mx-auto mt-3" style="width:90px;height:90px;object-fit:cover;" alt="Sherman Lacost">
                                <div class="card-body p-2">
                                    <strong>Sherman Lacost</strong>
                                    <div class="text-muted small">API & Botpress</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Technical Details -->
            <hr class="my-4">

            <h4 class="fw-semibold mb-2">Technical Details</h4>
            <ul class="text-muted ps-3" style="line-height:1.8">
                <li>API used: NPI Registry (<code>https://npiregistry.cms.hhs.gov/api/</code>)</li>
                <li>Data model: Patients, Providers, Appointments (ERD in README)</li>
                <li>Singleton repositories with JSON persistence</li>
                <li>Challenges: NPI pagination, nullable fields, CSS consistency</li>
                <li>Solutions: DTO mapping, safe formatting, unified Bootstrap theme</li>
            </ul>
        </div>
    </div>
</div>
